QMainWindow, QWidget {
    background-color: {{COLORS.BACKGROUND_DARK}};
    color: {{COLORS.TEXT}};
    font-family: "Segoe UI", sans-serif;
    font-size: 14px;
    border: none;
}

/* --- Die drei Bento-Boxen (Container) --- */
/* Diese IDs steuern den "Liquid Glass" Look */
#container_nav, #container_sidebar, #container_chat {
    background-color: {{COLORS.GLASS_BG}};
    border: 1px solid {{COLORS.GLASS_BORDER}};
    border-radius: 15px;
}

/* --- Navigation --- */
#top_nav_button {
    font-size: 16px;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: transparent; /* Button f√ºgt sich in Glas-Container ein */
}
#top_nav_button:hover {
    background-color: {{COLORS.BACKGROUND_LIGHT}};
}

/* --- Sidebar Inhalt --- */
/* Damit die Liste transparent ist und der Container-Hintergrund wirkt */
QListWidget {
    background-color: transparent;
    border: none;
    outline: none;
}

/* --- Chat Bereich --- */
/* Der Chat-Bereich selbst soll transparent sein, damit er im Container sitzt */
QScrollArea, QWidget#chat_scroll_content {
    background-color: transparent;
}

/* Inputs im Chat */
QLineEdit {
    background-color: {{COLORS.BACKGROUND_LIGHT}};
    border: 1px solid {{COLORS.GLASS_BORDER}};
    border-radius: 10px;
    padding: 10px;
    color: {{COLORS.TEXT}};
}

/* Buttons */
QPushButton {
    background-color: {{COLORS.PRIMARY}};
    color: white;
    border-radius: 8px;
    padding: 8px 16px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: #60a5fa;
}

/* Bubbles */
QLabel[class="user-bubble"] {
    background-color: {{COLORS.USER_BUBBLE}};
    padding: 10px 15px;
    border-radius: 18px;
    border-bottom-right-radius: 4px; /* Kleiner visueller Akzent */
    color: white;
}

QLabel[class="llm-bubble"] {
    background-color: {{COLORS.LLM_BUBBLE}};
    padding: 10px 15px;
    border-radius: 18px;
    border-bottom-left-radius: 4px;
    color: white;
}